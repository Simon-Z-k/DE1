entity dig_clk is
    Port (
        clk       : in STD_LOGIC;
        rst       : in STD_LOGIC;
        pulse_1hz : in STD_LOGIC;
        set       : in STD_LOGIC;         -- spustí načtení nového času (např. BTND)
        inc_h     : in STD_LOGIC;         -- tlačítko pro zvýšení hodin (např. BTNU)
        inc_m     : in STD_LOGIC;         -- tlačítko pro zvýšení minut (např. BTNR)
        inc_s     : in STD_LOGIC;         -- tlačítko pro zvýšení sekund (např. BTNL)
        new_h     : in STD_LOGIC_VECTOR (4 downto 0);
        new_m     : in STD_LOGIC_VECTOR (5 downto 0);
        new_s     : in STD_LOGIC_VECTOR (5 downto 0);
        hours     : out STD_LOGIC_VECTOR (4 downto 0);
        minutes   : out STD_LOGIC_VECTOR (5 downto 0);
        seconds   : out STD_LOGIC_VECTOR (5 downto 0)
    );
end dig_clk;
